<% const layout = 'layout' %>
<% const title = post.title %>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <article>
            <header class="mb-4">
                <h1 class="fw-bold"><%= post.title %></h1>
                
                <div class="text-muted mb-3">
                    <small>
                        Posted by <strong><%= post.author.username %></strong> 
                        on <%= post.createdAt.toLocaleDateString() %>
                        <% if (post.updatedAt > post.createdAt) { %>
                            <br><em>Updated on <%= post.updatedAt.toLocaleDateString() %></em>
                        <% } %>
                    </small>
                </div>
                
                <% if (currentUser && currentUser._id === post.author._id.toString()) { %>
                    <div class="mb-3">
                        <a href="/posts/<%= post._id %>/edit" class="btn btn-outline-primary btn-sm">Edit Post</a>
                        
                        <!-- ADD DELETE BUTTON HERE -->
                        <form action="/posts/<%= post._id %>/delete" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm ms-1" 
                                    onclick="return confirm('Are you sure you want to delete this post?')">
                                Delete Post
                            </button>
                        </form>
                    </div>
                <% } %>
            </header>
            
            <div class="post-content">
                <%= post.content.replace(/\n/g, '<br>') %>
            </div>
            
            <footer class="mt-5 pt-4 border-top">
                <a href="/posts" class="btn btn-secondary">‚Üê Back to All Posts</a>
            </footer>
        </article>
    </div>
</div>